@model IEnumerable<LoanCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<a href="Category/Create" class="btn btn-sm btn-success my-2">go to create</a>

@if (Model is null)
{
    <h2>No Data ...</h2>
}
else
{

    <div class="card rounded-4 p-2">
        <table class="table table-striped round-3 table-sm">
            <thead class="bg-secondary">
                <tr>
                    <th>#</th>
                    <th>@nameof(LoanCategory.LoanCategoryCode)</th>
                    <th>@nameof(LoanCategory.Description)</th>
                    <th>@nameof(LoanCategory.DesInKhmer)</th>
                    <th>@nameof(LoanCategory.Code)</th>
                    <th>@nameof(LoanCategory.CreatedDT)</th>
                    <th>@nameof(LoanCategory.ModifiedDT)</th>
                    <th>@nameof(LoanCategory.EditSeq)</th>
                    <th>@nameof(LoanCategory.IsActive)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (item, index) in Model.Select((value, i) => (value, i)))
                {
                    <tr>
                        <td>@(index + 1)</td>
                        <td>@item.LoanCategoryCode</td>
                        <td>@item.Description</td>
                        <td>@item.DesInKhmer</td>
                        <td>@item.Code</td>
                        <td>@(string.Format("{0:dd/MM/yyy}", item.CreatedDT))</td>
                        <td>@(string.Format("{0:dd/MM/yyy}", item.ModifiedDT))</td>
                        <td>@item.EditSeq</td>
                        <td>
                            <input type="checkbox" checked="@item.IsActive" readonly />
                        </td>
                        <td>
                            <div class="dropdown rounded-4">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-h"></i>
                                </button>
                                <ul class="dropdown-menu rounded-4">
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Details", "Category", new {loanCategoryId = item.LoanCategoryID})"><i
                                                class="fas fa-info-circle mr-2"></i>Details</a>
                                    </li>
                                    <li><a class="dropdown-item text-warning"
                                            href="@Url.Action("Edit", "Category", new {loanCategoryId = item.LoanCategoryID})"><i
                                                class="fas fa-pen mr-2"></i>Edit</a>
                                    </li>
                                    <li><a class="dropdown-item text-danger"
                                            href="@Url.Action("Delete", "Category", new {loanCategoryId = item.LoanCategoryID})"><i
                                                class="fas fa-trash mr-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
