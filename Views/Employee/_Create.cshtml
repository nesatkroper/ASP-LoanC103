@model Employee

<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/css/index.css" rel="stylesheet" />

<form asp-action="Create" method="post" class=" bg-white rounded mx-auto" style="max-width: 600px;">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row g-3 my-1">
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label fw-bold text-dark"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label fw-bold text-dark"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label fw-bold text-dark"></label>
            <input asp-for="Phone" class="form-control" placeholder="e.g., 123-456-7890" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label fw-bold text-dark"></label>
            <input asp-for="Email" class="form-control" placeholder="e.g., name@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Gender" class="form-label fw-bold text-dark"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Position" class="form-label fw-bold text-dark"></label>
            <input asp-for="Position" class="form-control" placeholder="e.g., Software Engineer" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Salary" class="form-label fw-bold text-dark"></label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="e.g., 50000.00" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="HireDate" class="form-label fw-bold text-dark"></label>
            <input asp-for="HireDate" type="date" class="form-control" />
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <label asp-for="Address" class="form-label fw-bold text-dark"></label>
            <input asp-for="Address" class="form-control" placeholder="Enter full address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-md-4 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label text-dark" asp-for="IsActive"></label>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <input type="submit" value="Create" class="btn btn-success w-100 py-2" />
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-outline-danger w-100 py-2">Back to List</a>
        </div>
    </div>
</form>

