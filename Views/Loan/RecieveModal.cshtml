@model Payment
<form id="form1">
  <div class="row mb-2">
    <label asp-for="PaidPrinciple" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="PaidPrinciple" readonly class="form-control" />
    </div>
  </div>
  <div class="row mb-2">
    <label asp-for="PaidInterest" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="PaidInterest" readonly class="form-control" />
    </div>
  </div>
  <div class="row mb-2">
    <label asp-for="RecieveAmount" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" asp-for="RecieveAmount" class="form-control" />
    </div>
  </div>
  <div class="row mb-2">
    <label asp-for="ChangeAmount" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" asp-for="ChangeAmount" class="form-control" />
    </div>
  </div>
</form>
